{
  "extends": "@hive/typescript-config/express.json",
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "emitDeclarationOnly": true,
    "baseUrl": "./",
    "paths": {
      "@/*": [
        "src/*"
      ],
      "winston": [
        "./node_modules/winston"
      ],
      "@hive/*": ["./node_modules/@hive/*"]
    },
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}