{
  "extends": "@hive/typescript-config/packages.json",
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "baseUrl": "./",
    "paths": {
      "@/*": [
        "src/*"
      ],
      "winston": [
        "./node_modules/winston",
        "../../node_modules/winston"
      ],
      "@hive/*": [
        "./node_modules/@hive/*"
      ]
    },
  },
  "references": [
    {
      "path": "../../packages/shared-middlewares"
    }
  ],
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}